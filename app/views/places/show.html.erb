<h1><%= @place["name"] %></h1>

<h4>My Entries</h4>

<div class="row">
<% for entry in @entries %>
  <div class="col-md-4">
  <p><%= entry["title"] %></p>
  <p><%= entry["occurred_on"] %></p>
  <p><%= entry["description"] %></p>
    <% if entry.uploaded_image.attached? %>
    <img src="<%= url_for(entry.uploaded_image)%>" class="img-fluid">
    <% else %>
    <img src="<%= entry["image"] %>" class="img-fluid">
    <% end %>
    </div>
    
<% end %>
</div>


<p>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-dark">New Entry</a>
</p>

<p>
  <a href="/places" class="btn btn-dark">Back to All Places</a>
</p>